<UserControl x:Class="WheelOfFortune.Dialogs.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WheelOfFortune.Dialogs"
             xmlns:locale="clr-namespace:WheelOfFortune.Localization"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             Padding="16"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <s:Boolean x:Key="TrueValue">True</s:Boolean>
        <s:Boolean x:Key="FalseValue">False</s:Boolean>

        <SolidColorBrush x:Key="LightBackground" Color="#f5f5f5" />
        <SolidColorBrush x:Key="LightForeground" Color="#c2c2c2" />
        <SolidColorBrush x:Key="DarkBackground" Color="#2C2C2C" />
        <SolidColorBrush x:Key="DarkForeground" Color="#4A4A4A" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <materialDesign:PackIcon Width="50"
                                     Height="{Binding ActualWidth, RelativeSource={RelativeSource Mode=Self}}"
                                     Kind="Cog" />
            <TextBlock Margin="8,0,0,0"
                       Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                       Text="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[MainWindow_SettingsButton_Content]}" />
        </StackPanel>

        <Separator Grid.Row="1"
                   Margin="0,0,16,16"
                   HorizontalAlignment="Stretch" />

        <ScrollViewer Grid.Row="2" materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
            <DockPanel LastChildFill="False">

                <TextBlock VerticalAlignment="Center"
                           DockPanel.Dock="Top"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           Text="Theme" />

                <WrapPanel Margin="8,0,8,8"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Top"
                           Orientation="Horizontal">

                    <!--  System Theme  -->
                    <RadioButton Margin="8"
                                 GroupName="ThemeSelection"
                                 IsChecked="{Binding IsSystemTheme}"
                                 Style="{StaticResource MaterialDesignRadioButton}">
                        <StackPanel>
                            <materialDesign:Card Width="160" Height="120">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  Right half (dark)  -->
                                    <StackPanel Grid.ColumnSpan="2"
                                                Width="160"
                                                Margin="0"
                                                Background="{StaticResource DarkBackground}">
                                        <StackPanel Margin="8">
                                            <Border Width="32"
                                                    Height="32"
                                                    Background="{StaticResource DarkForeground}"
                                                    CornerRadius="32" />
                                            <materialDesign:Card Height="16"
                                                                 Margin="0,8,0,0"
                                                                 Background="{StaticResource DarkForeground}"
                                                                 UniformCornerRadius="8" />
                                            <materialDesign:Card Height="16"
                                                                 Margin="0,8,0,0"
                                                                 Background="{StaticResource DarkForeground}"
                                                                 UniformCornerRadius="8" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Left half (light)  -->
                                    <StackPanel Grid.Column="0"
                                                Width="160"
                                                Margin="0"
                                                Background="{StaticResource LightBackground}">
                                        <StackPanel Margin="8">
                                            <Border Width="32"
                                                    Height="32"
                                                    Background="{StaticResource LightForeground}"
                                                    CornerRadius="32" />
                                            <materialDesign:Card Height="16"
                                                                 Margin="0,8,0,0"
                                                                 Background="{StaticResource LightForeground}"
                                                                 UniformCornerRadius="8" />
                                            <materialDesign:Card Height="16"
                                                                 Margin="0,8,0,0"
                                                                 Background="{StaticResource LightForeground}"
                                                                 UniformCornerRadius="8" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       Text="System" />
                        </StackPanel>
                    </RadioButton>

                    <!--  Light Theme  -->
                    <RadioButton Margin="8"
                                 GroupName="ThemeSelection"
                                 IsChecked="{Binding IsLightTheme}"
                                 Style="{StaticResource MaterialDesignRadioButton}">
                        <StackPanel>
                            <materialDesign:Card Width="160" Background="{StaticResource LightBackground}">
                                <StackPanel Margin="8">
                                    <Border Width="32"
                                            Height="32"
                                            Background="{StaticResource LightForeground}"
                                            CornerRadius="32" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource LightForeground}"
                                                         UniformCornerRadius="8" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource LightForeground}"
                                                         UniformCornerRadius="8" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource LightForeground}"
                                                         UniformCornerRadius="8" />
                                </StackPanel>
                            </materialDesign:Card>
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       Text="Light" />
                        </StackPanel>
                    </RadioButton>

                    <!--  Dark Theme  -->
                    <RadioButton Margin="8"
                                 GroupName="ThemeSelection"
                                 IsChecked="{Binding IsDarkTheme}"
                                 Style="{StaticResource MaterialDesignRadioButton}">
                        <RadioButton.Resources />
                        <StackPanel>
                            <materialDesign:Card Width="160" Background="{StaticResource DarkBackground}">
                                <StackPanel Margin="8">
                                    <Border Width="32"
                                            Height="32"
                                            Background="{StaticResource DarkForeground}"
                                            CornerRadius="32" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource DarkForeground}"
                                                         UniformCornerRadius="8" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource DarkForeground}"
                                                         UniformCornerRadius="8" />
                                    <materialDesign:Card Height="16"
                                                         Margin="0,8,0,0"
                                                         Background="{StaticResource DarkForeground}"
                                                         UniformCornerRadius="8" />
                                </StackPanel>
                            </materialDesign:Card>
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       Text="Dark" />
                        </StackPanel>
                    </RadioButton>
                </WrapPanel>

                <Separator DockPanel.Dock="Top" Opacity="0.3" />

                <DockPanel DockPanel.Dock="Top">
                    <TextBlock VerticalAlignment="Center"
                               DockPanel.Dock="Right"
                               Text="{Binding VelopackUpdater.CurrentAppVersion}" />
                    <TextBlock DockPanel.Dock="Right"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_InstalledVersionTextBlock_Content]}" />
                </DockPanel>

                <Separator DockPanel.Dock="Top" Opacity="0.3" />

                <Grid HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_DownloadNewVersionTextBlock_Content]}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Width="500"
                               Text="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_DownloadNewVersionTextBlock_SupportingText]}"
                               TextWrapping="Wrap" />

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Orientation="Horizontal">
                        <Button Command="{Binding VelopackUpdater.CheckForUpdateCommand}"
                                CommandParameter="{StaticResource TrueValue}"
                                Content="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_CheckForUpdatesButton_Content]}" />
                        <Button Margin="4,0,0,0"
                                Command="{Binding VelopackUpdater.ApplyUpdateAndRestartCommand}"
                                CommandParameter="{StaticResource TrueValue}"
                                Content="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_InstallUpdateButton_Content]}"
                                IsEnabled="{Binding VelopackUpdater.IsUpdateAvailable}" />

                    </StackPanel>
                </Grid>

                <Separator DockPanel.Dock="Top" Opacity="0.3" />

                <DockPanel DockPanel.Dock="Top">
                    <ListBox DockPanel.Dock="Bottom"
                             ItemsSource="{Binding Languages}"
                             SelectedItem="{Binding SelectedLanguage}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Source="{Binding ImagePath}" />
                                    <TextBlock Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               Text="{Binding FriendlyName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBlock DockPanel.Dock="Top"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[SettingsDialog_LanguageTextBlock_Content]}" />
                </DockPanel>

            </DockPanel>
        </ScrollViewer>

        <Button Grid.Row="3"
                Margin="0,8,16,0"
                HorizontalAlignment="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                Content="{Binding Source={x:Static locale:LocalizationManager.Instance}, Path=[Close]}"
                Style="{StaticResource MaterialDesignFlatButton}" />

    </Grid>
</UserControl>