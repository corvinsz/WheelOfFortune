<Window x:Class="WheelOfFortune.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WheelOfFortune"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="WheelOfFortune"
        Width="900"
        Height="600"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d">
    <materialDesign:DialogHost DialogContentUniformCornerRadius="16">
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0"
                                 Margin="8"
                                 Padding="8"
                                 UniformCornerRadius="16">
                <Grid>
                    <Canvas x:Name="WheelCanvas"
                            Background="Transparent"
                            Loaded="WheelCanvas_Loaded"
                            SizeChanged="WheelCanvas_SizeChanged" />
                </Grid>
            </materialDesign:Card>

            <StackPanel Grid.Column="1"
                        Margin="8"
                        Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Border BorderThickness="1">
                        <Button Command="{Binding ImportFromClipboardCommand}"
                                Content="{materialDesign:PackIcon Kind=ClipboardArrowDownOutline}"
                                ToolTip="Import from clipboard" />
                    </Border>
                </StackPanel>
                <TextBox Height="300"
                         Margin="4"
                         VerticalContentAlignment="Top"
                         materialDesign:HintAssist.Hint="Enter one slice per line"
                         AcceptsReturn="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding SliceText, UpdateSourceTrigger=PropertyChanged, Delay=100}"
                         VerticalScrollBarVisibility="Auto" />

                <Button Margin="4"
                        Click="SpinButton_Click"
                        Content="Spin" />

                <ItemsControl x:Name="SlicesList" Margin="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="2" Orientation="Horizontal">
                                <Rectangle Width="16"
                                           Height="16"
                                           Margin="2"
                                           Fill="{Binding Fill}"
                                           Stroke="Black"
                                           StrokeThickness="0.5" />
                                <TextBlock Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </materialDesign:DialogHost>
</Window>
